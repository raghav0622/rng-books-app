{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    ".next": true,
    ".vscode": true,
    "node_modules": true,
    "public": true,
    "app/favicon.ico": true,
    ".eslintrc.json": true,
    ".gitignore": true,
    ".prettierignore": true,
    ".prettierrc": true,
    "next-env.d.ts": true,
    "next.config.mjs": true,
    "package-lock.json": true,
    "postcss.config.js": true,
    "tasks": true,
    "app/globals.css": true,
    "app/theme.ts": true
  },
  "hide-files.files": [
    ".next",
    ".vscode",
    "node_modules",
    "public",
    "app/favicon.ico",
    ".eslintrc.json",
    ".gitignore",
    ".prettierignore",
    ".prettierrc",
    "next-env.d.ts",
    "next.config.mjs",
    "package-lock.json",
    "postcss.config.js",
    "tasks",
    "app/globals.css",
    "app/theme.ts"
  ],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  }
}
