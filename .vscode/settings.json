{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "package-lock.json": true
  },
  "hide-files.files": [
    "package-lock.json",
    ".next",
    "node_modules",
    "public",
    ".gitignore",
    ".prettierignore",
    ".prettierrc",
    "next-env.d.ts",
    ".eslintrc.json",
    "postcss.config.js"
  ],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  }
}
